/********************************************************************************
* Animation Curve Editor
********************************************************************************/
.rosettaui-animation-curve-editor-fixed-size-area {
    flex-shrink: 0;
}

.rosettaui-animation-curve-editor {
    flex-grow: 1;
}

.rosettaui-animation-curve-editor EnumField:disabled {
    opacity: 0.5;
}

.rosettaui-animation-curve-editor .unity-base-field__label {
    min-width: 100px;
}

.rosettaui-animation-curve-editor__curve-group {
    flex-grow: 3;
    flex-shrink: 1;
    margin: 4px 8px;
    padding: 0;
}

.rosettaui-animation-curve-editor__preview-background {
    flex-grow: 1;
    height: 100%;
    margin-top: -8px;
}

.rosettaui-animation-curve-editor__preview-front {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.rosettaui-animation-curve-editor__horizontal-scroller-container {
    flex-direction: row;
}

.rosettaui-animation-curve-editor__horizontal-scroller-container > Scroller {
    flex-grow: 1;
}

.rosettaui-animation-curve-editor__horizontal-scroller-container > VisualElement {
    width: 12px;
}

.rosettaui-animation-curve-editor__vertical-axis-label-container {
    position: absolute;
    width: 50px;
    height: 100%;
    top: 0;
    left: 0;
}

.rosettaui-animation-curve-editor__horizontal-axis-label-container {
    position: absolute;
    width: 100%;
    height: 20px;
    bottom: 0;
    left: 0;
}

.rosettaui-animation-curve-editor__vertical-axis-label-container > Label,
.rosettaui-animation-curve-editor__horizontal-axis-label-container > Label {
    position: absolute;
    color: gray;
}

.rosettaui-animation-curve-editor__control-buttons-container {
    position: absolute;
    height: 26px;
    top: 0;
    left: 0;
    right: 0;
    margin: 4px;
    flex-direction: row-reverse;
    opacity: 0.6;
}

.rosettaui-animation-curve-editor__control-buttons-container > * {
    width: 26px;
    height: 26px;
    margin: 0 0 0 4px;
}

.rosettaui-animation-curve-editor__fit-button {
    background-image: resource("animation-curve_fit");
}

.rosettaui-animation-curve-editor__snap-x-button {
    background-image: resource("animation-curve_snap-x");
}

.rosettaui-animation-curve-editor__snap-y-button {
    background-image: resource("animation-curve_snap-y");
}

.rosettaui-animation-curve-editor__parameter-popup {
    position: absolute;
    margin: 0;
    padding: 0 2px;
    background-color: black;
    translate: 0 -100%;
    min-height: auto;
}

.rosettaui-animation-curve-editor__property-group {
    margin: 8px 4px 8px 4px;
}

.rosettaui-animation-curve-editor__time-value-row
{
    height: 22px;
    flex-direction: row;
    flex-wrap: wrap;
}

.rosettaui-animation-curve-editor__time-value-row > FloatField
{
    flex-basis: 100px;
}

.rosettaui-animation-curve-editor__time-value-row .unity-base-field__label
{
    min-width: 50px;
}

.rosettaui-animation-curve-editor__time-value-row > EnumField
{
    min-width: 189.5px;
    max-width: 100%;
}

.rosettaui-animation-curve-editor__field-row {
    width: 100%;
    height: 22px;
    flex-direction: row;
    flex-grow: 1;
    padding: 0;
    margin: 0 4px 0 0;
}

.rosettaui-animation-curve-editor__field-row > EnumField {
    width: 120px;
}

.rosettaui-animation-curve-editor__field-row > ToggleButton {
    margin-right: 4px;
}

/********************************************************************************
* Control Point
********************************************************************************/
.rosettaui-animation-curve-editor__control-point-container {
    position: absolute;
    margin: 0;
    width: 20px;
    height: 20px;
    translate: -10px -10px;
    justify-content: center;
    align-items: center;
}

.rosettaui-animation-curve-editor__control-point {
    margin: 0;
    padding: 0;
    width: 6px;
    height: 6px;
    background-color: #00ff00;
    rotate: 45deg;
    border-width: 1.5px;
    border-color: black;
}

.rosettaui-animation-curve-editor__control-point--active {
    border-color: whitesmoke;
    border-width: 2px;
}

.rosettaui-animation-curve-editor__control-point-handle__line {
    position: absolute;
    top: 3px;
    width: 50px;
    height: 1.5px;
    background-color: rgba(245, 245, 245, 0.3); /* whitesmoke with transparency */
    transform-origin: left center;
}

.rosettaui-animation-curve-editor__control-point-handle__handle-container {
    position: absolute;
    top: -9.5px;
    right: -9.5px;
    width: 20px;
    height: 20px;
    justify-content: center;
    align-items: center;
}

.rosettaui-animation-curve-editor__control-point-handle__handle {
    width: 5px;
    height: 5px;
    background-color: #1d1d1d;
    border-width: 1px;
    border-color: gray;
    rotate: 45deg;
}

.rosettaui-animation-curve-editor__control-point-handle__handle-container-weight > .rosettaui-animation-curve-editor__control-point-handle__handle {
    width: 7px;
    height: 7px;
    rotate: 0;
}