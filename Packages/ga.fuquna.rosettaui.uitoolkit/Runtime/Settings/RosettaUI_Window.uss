/********************************************************************************
* Window
********************************************************************************/
.rosettaui-window {
    --rosettaui-window-border-width: 1px;
    --rosettaui-window-border-color: rgba(5, 5, 5, 0.2);

    background-color: var(--rosettaui-color-window-background);
    position: absolute;
    border-radius: 1px;
    border-width: var(--rosettaui-window-border-width);
    border-color: var(--rosettaui-window-border-color);
    padding-bottom: 8px;
}

.rosettaui-window--focused {
    background-color: var(--rosettaui-color-window-background-focused);
}

.rosettaui-window__titlebar-container {
    /*margin: var(--window-border-width-inverse) var(--window-border-width-inverse) 0px var(--window-border-width-inverse);*/
    margin: 2px;
    flex-direction: row;
    flex-shrink: 0;
}

.rosettaui-window__titlebar-container__right {
    align-content: flex-end;
    margin-left: auto;
    margin-top: -2px;
    margin-bottom: -2px;
    margin-right: -2px;
}

.rosettaui-window-title-button {
    padding: 1px 16px;
    height: 100%;
    min-height: 18px;
    align-items: center;
    flex-direction: row;
}
.rosettaui-window-title-button:hover {
    background-color: #C42B1C;
}
.rosettaui-window-title-button:active {
    background-color: #C53E2C;
}

.rosettaui-window-title-button__icon {
    background-image: var(--close-icon);
    width: 10px;
    height: 10px;
    -unity-background-image-tint-color: var(--gray-button-tint);
}

.rosettaui-window__content-container{
    overflow: hidden;
    flex-grow: 1;
}


/********************************************************************************
* Window Resize Handle
********************************************************************************/
.rosettaui-window__resize-handle-container {
    position: absolute;
    top: 0; bottom: 0; left: 0; right: 0;
    background-color: transparent;
}

.rosettaui-window__resize-handle {
    --rosettaui-window-resize-handle-thickness-outer: -4px;
    --rosettaui-window-resize-handle-thickness-inner: 2px;
    --rosettaui-window-resize-handle-thickness: 6px;

    position: absolute;
    background-color: transparent;
}

.rosettaui-window__resize-handle-horizontal {
    left: var(--rosettaui-window-resize-handle-thickness-inner);
    right: var(--rosettaui-window-resize-handle-thickness-inner);
    height: var(--rosettaui-window-resize-handle-thickness);
    cursor: var(--cursor-resize-vertical);
}

.rosettaui-window__resize-handle-vertical {
    top: var(--rosettaui-window-resize-handle-thickness-inner);
    bottom: var(--rosettaui-window-resize-handle-thickness-inner);
    width: var(--rosettaui-window-resize-handle-thickness);
    cursor: var(--cursor-resize-horizontal);
}

.rosettaui-window__resize-handle-corner {
    width: var(--rosettaui-window-resize-handle-thickness);
    height: var(--rosettaui-window-resize-handle-thickness);
}

.rosettaui-window__resize-handle-top {
    top: var(--rosettaui-window-resize-handle-thickness-outer);
}

.rosettaui-window__resize-handle-bottom {
    bottom: var(--rosettaui-window-resize-handle-thickness-outer);
}

.rosettaui-window__resize-handle-left {
    left: var(--rosettaui-window-resize-handle-thickness-outer);
}

.rosettaui-window__resize-handle-right {
    right: var(--rosettaui-window-resize-handle-thickness-outer);
}

.rosettaui-window__resize-handle-top-left {
    top: var(--rosettaui-window-resize-handle-thickness-outer);
    left: var(--rosettaui-window-resize-handle-thickness-outer);
    cursor: var(--cursor-resize-up-left);
}

.rosettaui-window__resize-handle-top-right {
    top: var(--rosettaui-window-resize-handle-thickness-outer);
    right: var(--rosettaui-window-resize-handle-thickness-outer);
    cursor: var(--cursor-resize-up-right);
}

.rosettaui-window__resize-handle-bottom-left {
    bottom: var(--rosettaui-window-resize-handle-thickness-outer);
    left: var(--rosettaui-window-resize-handle-thickness-outer);
    cursor: var(--cursor-resize-up-right);
}

.rosettaui-window__resize-handle-bottom-right {
    bottom: var(--rosettaui-window-resize-handle-thickness-outer);
    right: var(--rosettaui-window-resize-handle-thickness-outer);
    cursor: var(--cursor-resize-up-left);
}